{
    "id": "io.github.fabrialberio.pinapp",
    "runtime": "org.gnome.Platform",
    "runtime-version": "47",
    "sdk": "org.gnome.Sdk",
    "command": "pinapp",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=~/.config/autostart:rw",
        "--filesystem=xdg-data/applications:rw",
        "--filesystem=xdg-data/flatpak:ro",
        "--filesystem=/var/lib/flatpak:ro",
        "--filesystem=/var/lib/snapd:ro",
        "--filesystem=~/.local/share/xdg-desktop-portal:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "pinapp",
            "builddir": true,
            "buildsystem": "meson",
            "run-tests": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
